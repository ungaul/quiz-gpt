{
  "manifest_version": 2,
  "name": "QuizGPT",
  "version": "0.1",
  "description": "Auto-fill quiz answers using ChatGPT",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "<all_urls>"
  ],
  "browser_action": {
    "default_title": "Start QuizGPT",
    "default_icon": {
      "256": "assets/icon.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "icons": {
    "256": "assets/icon.png"
  }
}
